<table class="form_styling">
  <%= form_tag('/sessions') do %>
    <tr>
      <td><%= label_tag :email %></td>
      <td><%= text_field_tag :email %></td>
    </tr>
    <tr>
      <td><%= label_tag :password %></td>
      <td><%= password_field_tag :password %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag :login %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Forgot Password?", forgot_password_path %>