<% if @user.errors.present? %>
  <div class="errors">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
</div>
<p class="publication_title"><%= @user.email %> has requested a password reset. Please enter:</p>
  <%= form_for @user, :as => :user, :url => password_reset_path, :method => :put do |f| %>
  <table class="form_styling">
    <tr>
      <td><%= f.label 'new password :' %></td>
      <td><%= f.password_field :new_password %></td>
    </tr>

    <tr>
           <%= f.hidden_field :email %>
      <td> <%= f.label 'password confirmation:' %></td>
      <td> <%= f.password_field :new_password_confirmation %></td>
    </tr>
    <tr>
   <td> <%= f.submit 'Update' %></td>
    </tr>
<% end %>
</table>
