<%= form_for @user do |f| %>

  <% if @user.errors.present? %>
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>


  <%= f.label :email %>
  <%= f.text_field :email %>


  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit :register %>
<% end %>

