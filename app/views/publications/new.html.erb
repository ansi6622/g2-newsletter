<% if @publication.errors.present? %>
  <div class="errors">
    <ul>
      <% @publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul> </div>
<% end %>

<%= form_for @publication do |f| %>
  <table class="form_styling">
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_field :description %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit :add_publication, :value => "Create Publication" %></td>
    </tr>
<% end %>
</table>
